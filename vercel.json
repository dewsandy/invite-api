{
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.5.5",
        "memory": 1024,
        "maxDuration": 10,
        "environment": {
          "INSTALL_DEPENDENCIES": "apt-get update && apt-get install -y libssl-dev || apt-get install -y libssl1.0"
        }
      }
    },
    "routes": [
      {
        "src": "/favicon.ico",
        "headers": {
          "Cache-Control": "public, max-age=31556952, immutable"
        },
        "dest": "/public/favicon.ico"
      },
      {
        "src": "/kamu.png",
        "headers": {
          "Cache-Control": "public, max-age=31556952, immutable"
        },
        "dest": "/public/kamu.png"
      },
      {
        "src": "/robots.txt",
        "headers": {
          "Cache-Control": "public, max-age=31556952, immutable"
        },
        "dest": "/public/robots.txt"
      },
      {
        "src": "/(css|js)/(.*)",
        "headers": {
          "Cache-Control": "public, max-age=86400, immutable"
        },
        "dest": "/public/$1/$2"
      },
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ],
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php",
        "config": {
          "buildCommand": "apt-get update && apt-get install -y libssl-dev || apt-get install -y libssl1.0 && vercel build"
        }
      }
    ]
  }
  